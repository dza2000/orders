<h1>Editing Donation Line</h1>

<% form_for(@donation_line, :html=>{:id=>"my_form"}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :sku %><br />
    <%= f.text_field :sku %>
  </p>
  <p>
    <%= f.label :needs_reprinting %><br />
    <%= f.check_box :needs_reprinting %>
  </p>
  <p>
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </p>
  <p>
    <%= f.label :personalized_to %><br />
    <%= f.text_field :personalized_to %>
  </p>
  <p>
  	<%= f.label :donation_amount %><br />
	<%= f.text_field :donation_amount %>
  <p>
    <%= button_to_function "Save", "$('my_form').submit(); window.opener.location.reload();window.close()"   %>
  </p>
<% end %>

<%= link_to 'Show', @donation_line %> |
<%= link_to 'Back', donation_lines_path %>