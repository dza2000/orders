
<p class="fields">
    <%= f.label :address %>
    <%= f.text_field :address, :size=>"20" %><br>
<br>  
    <%= f.label :format %>
    <%= f.select(:format, Email::FORMAT) %>
  <br><br>
    <%= f.label :email_type %>
    
	<%= f.select(:email_type, Email::EMAILTYPE)  %>
  <br><br>
    <%= f.label :is_primary %>
    <%= f.check_box :is_primary %>
	
	<span style="float:right;margin-right:20px;"><%= link_to_remove_fields "remove email address", f%></span>
  </p>
