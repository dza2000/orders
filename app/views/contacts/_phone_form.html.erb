
<p class="fields">
    <div class="form_row">
	<label for="prefix">Area Code</label>
    <%= f.text_field :prefix, :size=>4, :class=>"form_field"%>
  </div>
  <div class="form_row">
    <label for="phone_number">Phone Number</label>
    <%= f.text_field :phone_number, :class=>"form_field", :size=>"7" %>
  </div>
  <div class="form_row">
    <label for=":extension">Ext.</label>
    <%= f.text_field :extension, :class=>"form_field", :size=>"4"%>
  </div>
  <div class="form_row">
    <label for="phone_type">Phone Type</label>
    <%= f.select(:phone_type, Phone::PHONETYPE)  %>
  </div>
  <div class="form_row">
    <label for="is_primary">Is this your primary phone?</label>
    <%= f.check_box :is_primary, :class=>"form_field" %>
	</div>
	<span style="float:right;margin-right:20px;"><%= link_to_remove_fields "remove phone", f%></span>
  </p>
  