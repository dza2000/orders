<h1>New initiative</h1>

<% form_for(@initiative) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </p>
  <p>
    <%= f.label :minimum_donation %><br />
    <%= f.text_field :minimum_donation %>
  </p>
  <p>
    <%= f.label :catalog_item_id %><br />
    <%= f.text_field :catalog_item_id %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', initiatives_path %>