<h1>Editing initiative</h1>

<% form_for(@initiative) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  
  <p>
    <%= f.label :minimum_donation %><br />
    <%= f.text_field :minimum_donation %>
  </p>
  <p>
    <%= f.label :sku %><br />
    <%= f.text_field :sku %>
  </p>
  <p>
  	<%= f.label "Needs Printing?"%>
  	<%= f.check_box :needs_printing %>
  	
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @initiative %> |
<%= link_to 'Back', initiatives_path %>