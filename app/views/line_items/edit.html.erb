<h1>Editing Order line item</h1>

<% form_for(@line_item, :html=>{ :id => "my_form"}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :catalog_item_id %><br />
    <%= f.text_field :catalog_item_id %>
  </p>
  <p>
    <%= f.label :quantity %><br />
    <%= f.text_field :quantity %>
  </p>
  <p>
    <%= f.label :needs_reprinting %><br />
    <%= f.check_box :needs_reprinting %>
  </p>
  <p>
    <%= f.label :order_id %><br />
    <%= f.text_field :order_id %>
  </p>
  <p>
    <%= button_to_function "Save", "$('my_form').submit(); window.opener.location.reload();window.close()"   %>
  </p>
<% end %>

<%= link_to 'Show', @line_item %> |
<%= link_to 'Back', line_items_path %>