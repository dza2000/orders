<h1>New payment</h1>

<% form_for(@payment) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :transaction_id %><br />
    <%= f.text_field :transaction_id %>
  </p>
  <p>
    <%= f.label :amount %><br />
    <%= f.text_field :amount %>
  </p>
  <p>
    <%= f.label :payment_method %><br />
    <%= f.text_field :payment_method %>
  </p>
  <p>
    <%= f.label :payment_date %><br />
    <%= f.date_select :payment_date %>
  </p>
  <p>
    <%= f.label :created_at %><br />
    <%= f.date_select :created_at %>
  </p>
  <p>
    <%= f.label :updated_at %><br />
    <%= f.date_select :updated_at %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<%= link_to 'Back', payments_path %>