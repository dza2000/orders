<h1>New Received Issue</h1>

<% form_for(@received_issue, :html=>{:id=>"my_form"}) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :subscription_id %><br />
    <%= f.text_field :subscription_id %>
  </p>
  <p>
    <%= f.label :published_issue_id %><br />
    <%= collection_select(:received_issue, :published_issue_id, PublishedIssue.find(:all), :id, :name) %>
  </p>
  <p>
    <%= f.label :contact_id %><br />
    <%= f.text_field :contact_id %>
  </p>
  <p>
    <%= button_to_function "Save", "$('my_form').submit(); window.opener.location.reload();window.close()"   %>
  </p>
<% end %>

