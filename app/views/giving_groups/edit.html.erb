<h1>Editing giving_group</h1>

<% form_for(@giving_group) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :contact_ID %><br />
    <%= f.text_field :contact_ID %>
  </p>
  <p>
    <%= f.label :name %><br />
    <%= f.text_field :name %>
  </p>
  <p>
    <%= f.label :start_date %><br />
    <%= f.date_select :start_date %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>

<%= link_to 'Show', @giving_group %> |
<%= link_to 'Back', giving_groups_path %>